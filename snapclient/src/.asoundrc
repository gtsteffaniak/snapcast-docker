# Bluetooth headset
defaults.bluealsa {
     interface "hci0"            # host Bluetooth adapter
     device "14:C1:4E:B3:D0:D9"
     profile "a2dp"
}

pcm.bt{
        type plug
        slave.pcm {
                type bluealsa
                device "14:C1:4E:B3:D0:D9"
                profile "a2dp"
        }
        hint {
                show on
                description "Bluetooth Audio ALSA Backend"
        }
}
pcm.!default {
    type plug
    slave.pcm "bt"
}
